# Production Environment Variables
NODE_ENV=production
PORT=5001
FRONTEND_URL=https://yourdomain.com

# Database (Use MongoDB Atlas for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/showwork

# OAuth Credentials (Production)
GOOGLE_CLIENT_ID=your_google_client_id_production
GOOGLE_CLIENT_SECRET=your_google_client_secret_production
GITHUB_CLIENT_ID=your_github_client_id_production
GITHUB_CLIENT_SECRET=your_github_client_secret_production

# Session & Security (Use strong secrets in production)
SESSION_SECRET=your_production_session_secret_very_long_and_secure
JWT_SECRET=your_production_jwt_secret_very_long_and_secure

# OAuth Callback URLs (Production)
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback
GITHUB_CALLBACK_URL=https://yourdomain.com/api/auth/github/callback

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key











